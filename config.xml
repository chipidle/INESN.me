		<icon src="www/res/icon/ios/inevo/icon-76@2x.png"    width="152"  height="152" />
		<icon src="www/res/icon/ios/inevo/icon-small.png"    width="29"   height="29" />
		<icon src="www/res/icon/ios/inevo/icon-small@2x.png" width="58"   height="58" />
		<icon src="www/res/icon/ios/inevo/icon-small@3x.png" width="87"   height="87" />

		<splash src="www/res/screen/ios/inevo/Default-568h@2x~iphone.png"   width="640"  height="1136" />
		<splash src="www/res/screen/ios/inevo/Default-667h.png"             width="750"  height="1334" />
		<splash src="www/res/screen/ios/inevo/Default-736h.png"             width="1242" height="2208" />
