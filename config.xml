		id="me.inesn.inevo">

	<name>INEVO</name>
	<description>an Internal Network Platform exceptionally designed for I&amp;E Virtual Organization, whose mission is to help you ultimize your internal resource management; stay connected and interact with your particular community, no matter where in the world you are.</description>
	<author href="https://inevn.com" email="chipidle@msn.com">I&amp;E Corp.</author>
	<content src="index.html" />
	<icon src="www/icon.png" />

	<preference name="Orientation" value="portrait" />
	<preference name="AllowInlineMediaPlayback" value="true" />
	<preference name="AutoHideSplashScreen" value="true" />
	<preference name="SplashScreenDelay" value="0" />
	<preference name="ShowSplashScreenSpinner" value="false" />
	<preference name="StatusBarOverlaysWebView" value="true" />
	<preference name="SplashMaintainAspectRatio" value="true" />
	<preference name="fullscreen" value="false" />
	<preference name="stay-in-webview" value="true" />
	<preference name="UIWebViewBounce" value="false" />
	<preference name="webviewbounce" value="false" />
	<preference name="DisallowOverscroll" value="true" />
	<preference name="EnableViewportScale" value="false" />
	<preference name="MediaPlaybackRequiresUserAction" value="false" />
	<preference name="OpenAllWhitelistURLsInWebView" value="true" />
	<preference name="exit-on-suspend" value="false" />
	<preference name="KeepRunning" value="true" />
	<preference name="UIWebViewDecelerationSpeed" value="fast" />
	<preference name="useBrowserHistory" value="true" />
	<preference name="keyboardDisplayRequiresUserAction" value="false" />
	<preference name="HideKeyboardFormAccessoryBar" value="true" />
	<preference name="KeyboardResize" value="true" />
	<preference name="SuppressesLongPressGesture" value="true" />
	<preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
	<preference name="AndroidPersistentFileLocation" value="Compatibility" />
	<preference name="iosPersistentFileLocation" value="Library" />
	<preference name="WKWebViewOnly" value="true" />

	<preference name="phonegap-version" value="cli-8.0.0" />

	<platform name="android">
		<preference name="ErrorUrl" value="file:///android_asset/www/error.html" />
		<preference name="android-minSdkVersion" value="19" />
		<preference name="android-targetSdkVersion" value="28" />
		<resource-file src="www/res/config/inevo/google-services.json" target="app/google-services.json" />
		<allow-intent href="market:*" />

		<plugin name="cordova-plugin-qrscanner" source="npm" />

		<icon src="www/res/icon/android/inevo/drawable-ldpi-icon.png"    density="ldpi" />
		<icon src="www/res/icon/android/inevo/drawable-mdpi-icon.png"    density="mdpi" />
		<icon src="www/res/icon/android/inevo/drawable-hdpi-icon.png"    density="hdpi" />
		<icon src="www/res/icon/android/inevo/drawable-xhdpi-icon.png"   density="xhdpi" />
		<icon src="www/res/icon/android/inevo/drawable-xxhdpi-icon.png"  density="xxhdpi" />
		<icon src="www/res/icon/android/inevo/drawable-xxxhdpi-icon.png" density="xxxhdpi" />

		<splash src="www/res/screen/android/inevo/drawable-port-ldpi-screen.png"    density="ldpi" />
		<splash src="www/res/screen/android/inevo/drawable-port-mdpi-screen.png"    density="mdpi" />
		<splash src="www/res/screen/android/inevo/drawable-port-hdpi-screen.png"    density="hdpi" />
		<splash src="www/res/screen/android/inevo/drawable-port-xhdpi-screen.png"   density="xhdpi" />
		<splash src="www/res/screen/android/inevo/drawable-port-xxhdpi-screen.png"  density="xxhdpi" />
		<splash src="www/res/screen/android/inevo/drawable-port-xxxhdpi-screen.png" density="xxxhdpi" />

		<plugin name="cordova-plugin-fingerprint-aio" source="npm" spec="1.3.8" />
	</platform>
	<platform name="ios">
		<!-- <preference name="phonegap-version" value="cli-9.0.0" /> -->
		<!-- <preference name="UseLegacySwiftLanguageVersion" value="true" /> -->
		<!-- <preference name="UseSwiftLanguageVersion" value="4.2" /> -->
		<preference name="swift-version" value="4.2" />
		<preference name="ErrorUrl" value="error.html" />
		<resource-file src="www/res/config/inevo/GoogleService-Info.plist" />
		<allow-intent href="itms:*" />
		<allow-intent href="itms-apps:*" />

		<feature name="StatusBar">
			<param name="ios-package" value="CDVStatusBar" onload="true" />
		</feature>
		<feature name="CDVWKWebViewEngine">
			<param name="ios-package" value="CDVWKWebViewEngine" />
		</feature>

		<plugin name="cordova-plugin-qr-barcode-scanner" source="npm" />

		<config-file parent="UIViewControllerBasedStatusBarAppearance" overwrite="true" mode="replace" target="*-Info.plist">
